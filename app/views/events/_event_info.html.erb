  <%# BEG - Griser l'event s'il est full %>
  <% if event.bookings.count == event.max_number_guest %>
    <div class="unique-card" style="filter:grayscale(100%)">
  <% else %>
     <div class="unique-card">
  <% end %>
  <%# END - Griser l'event s'il est full %>

      <%= link_to event_path(event) do %>

        <div class="card-image-index">
          <%= image_tag "#{event.photo}" %>
        </div>

      <% end %>
      <div class="level-small-card">
        <div class="text-level-index"><i class="fa-solid fa-bullseye"></i> <%= event.level %></div>
      </div>

      <div class="card-text-index">
        <p class="text-name-event-index"><%= event.name %></p>

        <div class="text-box-show">
        </div>

        <div class="icon-address">
        <div class="flex-wrap-address">
          <i class="fa-solid fa-house"></i>
          <p class="text-city-index"><%= event.city %></p>
        </div>

        <div class="flex-wrap-address">
          <i class="fa-solid fa-calendar"></i>
          <p class="text-date-index"><%= event.date.to_fs(:rfc822) %></p>
        </div>
        </div>

        <div class="wrap-last-rank">
          <div class="city-price-wrap-ntm">
              <p class="text-city"><%= event.category%></p>
          <div>

            <div class="price-icon-wrap-ntm">
              <i class="bts-ntm fa-solid fa-wine-bottle"></i>
              <p class="text-price-index"><%= event.min_price %> € à <%= event.max_price %> €</p>
            </div>
          </div>
        </div>

      </div>
    </div>
