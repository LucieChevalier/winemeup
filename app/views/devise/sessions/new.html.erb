<body class="form">
  <div class="container">
    <h2 class="h2">S'identifier</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs form-login">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email", value: "Email" } %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password", value: "Mot de passe" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions button-sign-up">
        <%= f.button :submit, "Log in" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>
</div>
