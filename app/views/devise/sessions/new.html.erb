<body class="form">
  <div class="container" style="margin-bottom: 10rem">
    <h2 class="h2">Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs form-login">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { placeholder: "Adresse e-mail"} %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password", placeholder: "******" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions button-sign-up">
        <%= f.button :submit, "Connexion" %>
        <%= render "devise/shared/links" %>
      </div>

      <div class="forget-btn-div">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "forget-btn"%><br />
        <% end %>
      </div>
    <% end %>

  </div>
</div>
