<body class="form">
  <div class="container" style="margin-bottom: 10rem">
    <h2 class="h2">S'inscrire</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>

      <%= f.error_notification %>

      <div class="form-inputs form-login">
        <div class="firstname-form">
          <div class="fullname-item1">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Prénom" }%>
          </div>
          <div class="fullname-item2">
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Nom de famille" }%>
          </div>
        </div>


        <div class="address-form">
          <div class="address-item1">
            <%= f.input :address,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Adresse" }%>
          </div>

          <div class="address-item2">
            <%= f.input :postal_code,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Code postal" }%>
          </div>
          <div class="address-item3">
            <%= f.input :city,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Ville" }%>
          </div>
        </div>

        <div class="level-photo-email">
            <%= f.hint 'Quel est votre niveau en œnologie ?' %>

            <%= f.input :level,
            as: :radio_buttons,
            collection: [
              ['Novice'],
              ['Intermédiaire'],
              ['Expert']
              ],
              legend_tag: false,
              value_method: :first,
              required: true %>

            <%= f.input :photo, as: :file,
                        label: false,
                        input_html: { placeholder: "Avatar" }%>

          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { placeholder: "Adresse e-mail" }%>
        </div>

        <div class="password-form">
          <div class="password-item1">
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", placeholder: "******" } %>
          </div>
          <div class="password-item2">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", placeholder: "******" } %>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Inscription" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>`
</body>
