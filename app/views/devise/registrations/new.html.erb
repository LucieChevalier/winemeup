<body class="form">
  <div class="container">
    <h2>Sign up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>

      <%= f.error_notification %>

      <div class="form-inputs form-login">
        <div class="firstname-form">
          <div class="fullname-item1">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { autocomplete: "Prénom", value: "Prénom" }%>
          </div>
          <div class="fullname-item2">
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { autocomplete: "Nom de Famille", value: "Nom de Famille" }%>
          </div>
        </div>

        <div class="address-form">
          <div class="address-item1">
            <%= f.input :address,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { autocomplete: "Adresse", value: "Adresse", class: "fulladdress" }%>
          </div>

          <div class="address-item2">
            <%= f.input :postal_code,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { autocomplete: "Code Postal", value: "Code Postal", class: "fulladdress" }%>
          </div>
          <div class="address-item3">
            <%= f.input :city,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { autocomplete: "Ville", value: "Ville", class: "fulladdress" }%>
          </div>
        </div>

        <div class="level-email">
          <%= f.input :level,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "Niveau", value: "Niveau" }%>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "Email", value: "Email" }%>
        </div>

        <div class="password-form">
          <div class="password-item1">
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", value: "Mot de passe", class: "password-label" } %>
          </div>
          <div class="password-item2">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", value: "Nouveau mot de passe", class: "password-label" } %>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>`
</body>
