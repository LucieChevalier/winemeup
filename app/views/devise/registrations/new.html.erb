<body class="form">
  <div class="container">
    <h2 class="h2">S'inscrire</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>

      <%= f.error_notification %>

      <div class="form-inputs form-login">
        <div class="firstname-form">
          <div class="fullname-item1">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "PrÃ©nom" }%>
          </div>
          <div class="fullname-item2">
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Nom de Famille" }%>
          </div>
        </div>


        <div class="address-form">
          <div class="address-item1">
            <%= f.input :address,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Adresse" }%>
          </div>

          <div class="address-item2">
            <%= f.input :postal_code,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Code Postal" }%>
          </div>
          <div class="address-item3">
            <%= f.input :city,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Ville" }%>
          </div>
        </div>

        <div class="level-photo-email">
            <%= f.input :level,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Niveau" }%>

            <%= f.input :photo, as: :file,
                        label: false,
                        input_html: { placeholder: "Photo de profile" }%>

          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { placeholder: "Email" }%>
        </div>

        <div class="password-form">
          <div class="password-item1">
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", placeholder: "Mot de passe" } %>
          </div>
          <div class="password-item2">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", placeholder: "Nouveau mot de passe" } %>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

  </div>`
</body>
