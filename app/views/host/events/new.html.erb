<h1>Créer un événement</h1>
<p>Utilisez le formulaire ci-dessous pour créer un événement</p>


<%= simple_form_for(@event) do |f| %>

<%= f.input :name, required: true %>
<%= f.input :description, required: true %>
<%= f.input :address, required: true %>
<%= f.input :date, as: :date, html5: true, required: true %>

<%= f.input :level, as: :radio_buttons, collection: [
  ['0', 'Débutant'],
  ['1', 'Intermédiaire'],
  ['1', 'Confirmé']
  ], label_method: :second, value_method: :first, required: true %>

<%= f.input :category, collection: %w[Alsace-Lorraine Beaujolais Bordeaux Bourgogne Champagne Corse Jura-Bugey-Savoie Languedoc-Roussillon Loire Provence Rhône Sud-Ouest], required: true %>



<%= f.input :host_request, required: true %>
<%= f.input :max_number_guest, required: true %>

<div class="d-flex">
  <%= f.input :min_price, required: true %>
  <%= f.input :max_price, required: true %>
</div>

<%= f.submit "Créer" %>
<% end %>
